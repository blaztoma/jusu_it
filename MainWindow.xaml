<Window x:Class="Jūsų_IT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jūsų_IT"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600">

       
            <Grid ShowGridLines="True">
            
                
                    
            <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height ="*"/>

                </Grid.RowDefinitions>

             
            
            <!-- Meniu -->
                <Menu FontSize="18" Grid.ColumnSpan="2">

                    <MenuItem Header="Failas">
                        <MenuItem Header="_Atidaryti" Click="btn_open_file_Click"/>
                        <MenuItem Header="_Išsaugoti" Click="btn_save_file_Click"/>
                    </MenuItem>

                    <MenuItem Header="Taisa">

                        <MenuItem Header="_Pridėti darbovietę"/>
                        <MenuItem Header="_Redaguoti"/>
                        <MenuItem Header="_Pašalinti"/>

                    </MenuItem>

                    <MenuItem Header="_Išeiti" Click="exit_click" />

                </Menu>


                <!-- Header -->
                <StackPanel Grid.ColumnSpan="2" Grid.Row="1" Background="Orange" >

                    <TextBlock Text="Jūsų IT" FontSize="42"
                       HorizontalAlignment="Center" Height="68"/>
                </StackPanel >

            <DataGrid Grid.Row="3" Name="Offices"/>
            <Button Content="Pridėti darbovietę" HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Top" Click="AddOffice_Click"/>
            <Button Content="Redaguoti darbovietę" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Click="EditOffice_Click"/>
            <Button Content="Šalinti darbovietę" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" Click="RemoveOffice_Click" />


        <!--<StackPanel Grid.Row="3" Orientation="Horizontal">

            <Button x:Name="btn_user1" Click="btn_user1_Click">Prideti vartotoja1</Button>
            <Button x:Name="btn_user2" Click="btn_user2_Click">Prideti vartotoja2</Button>

        </StackPanel>-->


    </Grid>

        
</Window>
